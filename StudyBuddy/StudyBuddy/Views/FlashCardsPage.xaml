<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:local="clr-namespace:StudyBuddy.Views"
             Title="Materials"
             x:Class="StudyBuddy.Views.FlashCardsPage">
    <StackLayout>
        
        <ScrollView HorizontalOptions="Fill"
                        Margin="10">
            <StackLayout>
                <Label Text="Create Flashcards"/>
                <Frame>
                    <StackLayout>
                        <Editor Text="{Binding DeckName}"
                                Placeholder="Name of Flashcard Deck" 
                                PlaceholderColor="Gray" 
                                TextColor="Black" 
                                HeightRequest="150" 
                                WidthRequest="250">
                        </Editor>
                    </StackLayout>
                </Frame>
                <Label Text="Front"/>
                <Frame>
                    <StackLayout>
                        <Editor Text="{Binding QuestionInput}"
                                Placeholder="Question" 
                                PlaceholderColor="Gray" 
                                TextColor="Black" 
                                HeightRequest="150" 
                                WidthRequest="250">
                        </Editor>
                    </StackLayout>
                </Frame>
                <Label Text="Back"/>
                <Frame BackgroundColor="White" 
                       Margin ="0" 
                       Padding="10">
                    <Editor Text="{Binding AnswerInput}"
                                Placeholder="Answer" 
                                PlaceholderColor="Gray" 
                                TextColor="Black" 
                                HeightRequest="150" 
                                WidthRequest="250">
                    </Editor>
                </Frame>
                <Label Text="Quiz Options"/>
                <Editor Text="{Binding Wrong1Input}"
                        Placeholder="Incorrect Answer">
                </Editor>
                <Editor Text="{Binding Wrong2Input}"
                        Placeholder="Incorrect Answer">
                </Editor>

            </StackLayout>
        </ScrollView>
        
        <Button Text="Add Another Flashcard" Command="{Binding SaveCardCommand}"></Button>
        <Button Text="Done" Command="{Binding SaveDeckCommand}"></Button>
        
    </StackLayout>
</ContentPage>