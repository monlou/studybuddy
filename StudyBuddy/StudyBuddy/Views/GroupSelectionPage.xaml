<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyBuddy.Views.GroupSelectionPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal" 
                     HorizontalOptions="CenterAndExpand">  
          <Entry Placeholder="Find a Study Group" 
                 Keyboard="Chat"
                 x:Name="SearchBar" 
                 Text="{Binding Input}"/> 
          <Button Text="Search" 
                  Command="{Binding SearchGroupsCommand}"/>
        </StackLayout> 
        <ScrollView HorizontalOptions="CenterAndExpand"
                    VerticalScrollBarVisibility="Always">
            <StackLayout>
                <Frame>
                    <Label>
                        IFB101 - Impact of IT
                    </Label>
                </Frame>
                <Frame>
                    <Label>
                        IFB102 - Fundamentals of IT
                    </Label>
                </Frame>
                <Frame>
                    <Label>
                        IFB103 - Design for IT 
                    </Label>
                </Frame>
                <Frame>
                    <Label>
                        IFB104 - Building IT Systems
                    </Label>
                </Frame>
                <Frame>
                    <Label>
                        IFB201 - Programming Principles 
                    </Label>
                </Frame>
            </StackLayout>
        </ScrollView>
        <Image Aspect="AspectFill" 
               Source="add_circle.png"
               HorizontalOptions="EndAndExpand" 
               WidthRequest="30" 
               HeightRequest="30"  
               VerticalOptions="EndAndExpand"/>
        <StackLayout.GestureRecognizers>
            <TapGestureRecognizer x:Name="NewGroup" 
                                  AutomationId="NewGroup" 
                                  Command="{Binding SelectGroupCommand}" />
        </StackLayout.GestureRecognizers>

        <!--<controls:FloatingActionButton x:Name="FAB" 
                                           HorizontalOptions="EndAndExpand" 
                                           WidthRequest="90" 
                                           HeightRequest="90"  
                                           VerticalOptions="EndAndExpand" 
                                           Image="send.png"
                                           ButtonColor="#FF4081" 
                                           Command="{Binding EditorFABCommand}"/> -->
        
    </StackLayout>

</ContentPage>